<h1>Please Edit the equipment below!</h1>

<%= form_for @equipment do |u|%>
  <%= u.label :name%>
  <%= u.text_field :name%>
  <br>
  <%= u.label :make %>
  <%= u.text_field :make %>
  <br>
  <%= u.label :machine_type %>
  <%= u.text_field :machine_type %>
  <br>
  <%= u.label :rental_rate_day%>
  <%= u.text_field :rental_rate_day%>

  <br>
  <%= u.hidden_field :company_id, value: current_user.company.id%>

  <br>
  <%= u.submit%>
<%end%>
